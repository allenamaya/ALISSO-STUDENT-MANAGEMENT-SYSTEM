<% erb :'layout', layout: true do %>
  <h1>Edit Assignment</h1>

  <form action="/assignments/<%= @assignment.id %>" method="post">
    <input type="hidden" name="_method" value="put">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="<%= @assignment.title %>">
    <label for="description">Description:</label>
    <input type="text" id="description" name="description" value="<%= @assignment.description %>">
    
    <button type="submit">Save Changes</button>
  </form>